{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"noImplicitAny": true,
	"noImplicitReturns": true,
	"noUnusedParameters": true,
	"alwaysStrict": true,
	"forceConsistentCasingInFileNames": true,
	"pretty": true,
	"target": "es5",
	"allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
